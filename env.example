# Database Configuration
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/myinsurancebuddy?schema=public"
DB_NAME="myinsurancebuddy"
DB_USER="myuser"

# NextAuth Configuration
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="https://myinsurancebuddies.com"

# Upload Configuration
UPLOAD_DIR="/var/www/myinsurancebuddies.com/uploads"
MAX_UPLOAD_SIZE="10485760"  # 10MB in bytes

# Backup Configuration
BACKUP_DIR="/var/www/myinsurancebuddies.com/backups"
RETENTION_DAYS="14"

# Optional: Remote Backup
# REMOTE_BACKUP_HOST="user@backup-server.com"
# REMOTE_BACKUP_PATH="/backups/myinsurancebuddies"

# Site Configuration
SITE_URL="https://myinsurancebuddies.com"
SITE_NAME="MyInsuranceBuddies"
